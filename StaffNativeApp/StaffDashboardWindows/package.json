{
  "name": "staff-dashboard",
  "version": "1.0.0",
  "description": "Staff dashboard desktop app",
  "author": "13e",
  "main": "main.js",
  "scripts": {
  "start": "electron .",
  "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder"
},
  "devDependencies": {
    "electron": "30.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
  "appId": "com.staff.dashboard",
  "productName": "Staff Dashboard",
  "icon": "icon.ico",
  "win": {
    "target": "nsis",
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
}
